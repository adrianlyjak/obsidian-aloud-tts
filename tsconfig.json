{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "react",
    "lib": ["DOM", "ES5", "ES6", "ES7"]
  },
  "include": [
    "src/**/*.ts",
    "src/types/global.d.ts",
    "src/Plugin.tsx",
    "src/web/app.tsx"
  ]
}
